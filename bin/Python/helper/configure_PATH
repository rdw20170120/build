#!/bin/bash
logInfo 'Configuring system execution $PATH...'

# TODO: Move this elsewhere?
export BO_PathSystem=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin

requireVariable BO_Home       || return 1
requireVariable BO_PathSystem || return 1
requireVariable BO_Project    || return 1

_PathBuild=$BO_Home/bin/Python:$BO_Home/bin/Linux
_PathProject=$BO_Project/bin
_PathPve=$BO_Project/PVE/bin

export PATH=${_PathProject}:${_PathBuild}:${_PathPve}:${BO_PathSystem}

# Return, but do NOT exit, with a success code
return 0

