#!/bin/bash
logInfo "$BASH_SOURCE" "$LINENO" 'Configuring system execution $PATH...'

requireVariable "$BASH_SOURCE" "$LINENO" BO_Home
requireVariable "$BASH_SOURCE" "$LINENO" BO_Project
requireVariable "$BASH_SOURCE" "$LINENO" BO_PathSystem

_PathBuild=$BO_Home/bin/Python
_PathProject=$BO_Project/bin
_PathPve=$BO_Project/PVE/bin

export PATH=${_PathProject}:${_PathBuild}:${_PathPve}:${BO_PathSystem}

# Return, but do NOT exit, with a success code
return 0

