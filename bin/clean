#!/bin/bash
# Clean the project directory of all output and temporary files

rm "${VIRTUAL_ENV}/MANIFEST"

rm -fr "${VIRTUAL_ENV}/dist"

find "${VIRTUAL_ENV}" \( -type f -a -name "*.pyc"         \) -exec rm {} \;
find "${VIRTUAL_ENV}" \( -type f -a -name ".coverage"     \) -exec rm {} \;
find "${VIRTUAL_ENV}" \( -type f -a -name "coverage.xml"  \) -exec rm {} \;
find "${VIRTUAL_ENV}" \( -type f -a -name "nosetests.xml" \) -exec rm {} \;
find "${VIRTUAL_ENV}" \( -type f -a -name "pylint.out"    \) -exec rm {} \;
find "${VIRTUAL_ENV}" \( -type f -a -name "sloccount.sc"  \) -exec rm {} \;

# TODO: Add clean of *.pyc

